<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">
        <ImageButton
            android:id="@+id/btnSettingsIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:contentDescription="Settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_preferences" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyHome Dashboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Public IP"/>
        <TextView
            android:id="@+id/tvPublicIp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="—"
            android:textSize="18sp"
            android:paddingBottom="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current DNS A"/>
        <TextView
            android:id="@+id/tvDnsIp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="—"
            android:textSize="18sp"
            android:paddingBottom="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Check At"/>
        <TextView
            android:id="@+id/tvNextCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="—"
            android:textSize="18sp"
            android:paddingBottom="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PC Status"/>
        <TextView
            android:id="@+id/tvPcStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textSize="18sp"
            android:paddingBottom="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTurnOn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Turn On"
                android:layout_marginEnd="8dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTurnOff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Turn Off"
                android:layout_marginEnd="8dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckOnline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Check Online" />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close Dashboard"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenPlayStore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play Store"
                android:layout_marginEnd="8dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenApps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apps"
                android:layout_marginEnd="8dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenSystemSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="System Settings" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>